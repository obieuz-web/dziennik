<Window x:Class="dziennik.Windows.Forms.AppPointsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dziennik.Windows.Forms"
        mc:Ignorable="d"
        Background="LightSteelBlue"
        Title="Wpisz komuś uwage :)))))" Height="150" Width="300">
    <Border Margin="10" Padding="15" Background="LavenderBlush">
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Podaj punkty" />
            <TextBox Name="punkty" Grid.Column="1"/>

            <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Dodaj" Click="Button_Click"/>
        </Grid>
    </Border>
    
</Window>
